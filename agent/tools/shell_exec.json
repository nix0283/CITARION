{
  "tool_name": "shell_exec",
  "description": "Инструмент для выполнения shell команд в проекте",
  "version": "1.0.0",
  "default_timeout": 120000,
  "max_timeout": 600000,
  "commands": {
    "lint": {
      "command": "bun run lint",
      "purpose": "Проверка качества кода ESLint",
      "timeout": 60000,
      "critical": true
    },
    "dev": {
      "command": "bun run dev",
      "purpose": "Запуск dev сервера (автоматически)",
      "note": "НЕ запускать вручную - система запускает автоматически",
      "port": 3000
    },
    "prisma_generate": {
      "command": "bunx prisma generate",
      "purpose": "Генерация Prisma клиента",
      "timeout": 60000
    },
    "prisma_migrate": {
      "command": "bunx prisma migrate dev --name",
      "purpose": "Создание миграции БД",
      "timeout": 120000
    },
    "prisma_push": {
      "command": "bunx prisma db push",
      "purpose": "Push схемы в БД без миграции",
      "timeout": 60000
    },
    "install": {
      "command": "bun add",
      "purpose": "Установка npm пакета",
      "timeout": 120000
    },
    "generate_image": {
      "command": "z-ai-generate --prompt --output --size",
      "purpose": "Генерация изображений через CLI",
      "sizes": ["1024x1024", "768x1344", "864x1152", "1344x768", "1152x864", "1440x720", "720x1440"]
    }
  },
  "project_info": {
    "runtime": "bun",
    "package_manager": "bun",
    "port": 3000,
    "framework": "Next.js 16.1.3",
    "react_version": "19"
  },
  "rules": [
    "НЕ запускать bun run dev - сервер запускается автоматически",
    "НЕ использовать bun run build - только dev режим",
    "НЕ использовать grep, find - использовать Grep и Glob tools",
    "Использовать && для цепочки команд",
    "Quote пути с пробелами",
    "Проверять директорию перед mkdir через LS"
  ],
  "forbidden_commands": [
    "rm -rf /",
    "sudo",
    "chmod 777",
    "bun run build",
    "npm (использовать bun)"
  ],
  "useful_aliases": {
    "check_errors": "bun run lint 2>&1",
    "prisma_reset": "bunx prisma migrate reset --force",
    "clear_cache": "rm -rf .next && rm -rf node_modules/.cache"
  }
}
